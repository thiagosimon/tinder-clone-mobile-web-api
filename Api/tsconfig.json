{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "sourceMap": true,
    "typeRoots": ["../node_modules/@types"],
    "types": ["node"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "buildOnSave": true
}
